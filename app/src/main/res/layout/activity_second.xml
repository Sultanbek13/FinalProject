<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.question.QuestionActivity"
    >

    <TextView
        android:id="@+id/stepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16sp"
        android:textSize="22sp"
        android:textColor="#DCCC403C"
        />


    <ImageView
        android:id="@+id/ivQuestion"
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <ImageView
        android:id="@+id/variantA"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:onClick="onButtonClick"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivQuestion"
        android:layout_margin="32dp"
        />

    <ImageView
        android:id="@+id/variantB"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:onClick="onButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivQuestion"
        android:layout_margin="32dp" />

    <ImageView
        android:id="@+id/variantC"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:onClick="onButtonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/variantA"
        android:layout_margin="32dp" />

    <ImageView
        android:id="@+id/variantD"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:onClick="onButtonClick"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/variantB"
        android:layout_margin="32dp" />

    <ImageView
        android:id="@+id/boy3"
        android:layout_width="120dp"
        android:layout_height="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/man3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/boy3"
        app:layout_constraintBottom_toTopOf="@id/boy3"
        android:text="ᴍ-ᴍ-ᴍ"
        android:textSize="16sp"
        android:textColor="#DCCC403C" />

</androidx.constraintlayout.widget.ConstraintLayout>