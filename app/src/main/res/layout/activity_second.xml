<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.question.QuestionActivity"
    >

    <ImageView
        android:id="@+id/ivQuestion"
        android:layout_width="200dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/variantA"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:onClick="onButtonClick"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivQuestion"
        android:layout_margin="32dp"
        />

    <ImageView
        android:id="@+id/variantB"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:onClick="onButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivQuestion"
        android:layout_margin="32dp" />

    <ImageView
        android:id="@+id/variantC"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:onClick="onButtonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/variantA"
        android:layout_margin="32dp" />

    <ImageView
        android:id="@+id/variantD"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:onClick="onButtonClick"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/variantB"
        android:layout_margin="32dp" />

    <ImageView
        android:id="@+id/boy3"
        android:layout_width="130dp"
        android:layout_height="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/boy3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/boy3"
        app:layout_constraintBottom_toTopOf="@id/boy3"
        android:text="Ну-ка !"
        android:textSize="16sp"
        android:textColor="#43A047" />


</androidx.constraintlayout.widget.ConstraintLayout>