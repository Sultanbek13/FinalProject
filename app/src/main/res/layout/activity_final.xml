<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvIq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ɪQ:"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvIq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:text="RESULT"
        android:textSize="32sp"
        android:layout_marginBottom="16dp"
        />

    <ImageView
        android:id="@+id/shareImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_menu_share"
        app:layout_constraintTop_toBottomOf="@id/tvIq"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ꜱʜᴀʀᴇ"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/shareImage"
        app:layout_constraintTop_toBottomOf="@id/score"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/returnImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        app:layout_constraintTop_toBottomOf="@id/shareImage"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ᴛʀʏ ᴀɢᴀɪɴ"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/returnImage"
        app:layout_constraintTop_toBottomOf="@id/tvShare"
        android:layout_margin="16dp" />

    
    <ImageView
        android:layout_width="120dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/man4"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>