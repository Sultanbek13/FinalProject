<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/editTextItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="#9A3737"
        android:background="#32000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="165dp"
        android:background="@drawable/man2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/editTextItem"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:background="#A11E1E"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:id="@+id/btnKids"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F59C69"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageKids"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/abacus"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/imageKids"
                    app:layout_constraintStart_toStartOf="parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ɪQ ᴄʜᴇᴄᴋ ꜰᴏʀ ᴋɪᴅꜱ 8-10"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    />
            </LinearLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" >

            <LinearLayout
                android:id="@+id/btnOldMan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#69DBC1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageOldMan"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/lightbulb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/imageTeenegers"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ɪQ ᴄʜᴇᴄᴋ ꜰᴏʀ ᴏʟᴅ ᴍᴀɴ 50+"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:id="@+id/btnYouth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6C6EAB"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageYouth"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/graduation"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/imageTeenegers"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ɪQ ᴄʜᴇᴄᴋ ꜰᴏʀ ʏᴏᴜᴛʜ 18+"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:id="@+id/btnTeenegers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F55B59"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageTeenegers"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/brain"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/imageTeenegers"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ɪQ ᴄʜᴇᴄᴋ ᴛᴇᴇɴᴇɢᴇʀꜱ 10-17"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>